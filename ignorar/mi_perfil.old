<!-- templates/app/mi_perfil.html -->
{% extends "base.html" %}

{% block content %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>💼 Mi Perfil Profesional</h2>
        <a href="{{ url_for('routes.editar_perfil_medico') }}" class="btn btn-warning">Editar Perfil</a>
    </div>

    <!-- Información del médico -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h3>{{ current_user.username }}</h3>
                    {% if current_user.specialty %}
                    <p class="lead text-primary"><i class="fas fa-stethoscope"></i> {{ current_user.specialty }}</p>
                    {% endif %}
                    {% if current_user.bio %}
                    <p>{{ current_user.bio }}</p>
                    {% endif %}
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-user-md fa-5x text-secondary"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Mis consultorios -->
    <h4>📍 Mis Consultorios</h4>
    <div class="row mb-4">
        {% for clinic in current_user.clinics %}
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5>{{ clinic.name }}</h5>
                    <p class="text-muted">{{ clinic.address }}</p>
                    <a href="{{ url_for('routes.turnos_por_clinica', clinic_id=clinic.id) }}" 
                       class="btn btn-primary btn-sm">Ver disponibilidad</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}