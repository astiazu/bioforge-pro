{% extends "base.html" %}

{% block title %}Tienda de {{ professional.username }} - BioForge{% endblock %}

{% block content %}
<div class="container mt-5">

    <!-- T√≠tulo -->
    <div class="row mb-3">
        <div class="col-12">
            <h2>üõçÔ∏è Tienda de <strong>{{ professional.username }}</strong></h2>
            <p class="text-muted">Productos y servicios disponibles</p>
        </div>
    </div>

    <!-- Filtros -->
    <div class="row mb-4">
        <div class="col-md-6 mb-2">
            <input type="text" id="search-input" class="form-control" placeholder="Buscar producto o servicio...">
        </div>
        <div class="col-md-6 mb-2">
            <select id="category-filter" class="form-select">
                <option value="">Todas las categor√≠as</option>
                {% for cat in categories %}
                    <option value="{{ cat.id }}">{{ cat.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    {% if products %}
        {% set grouped_products = {} %}
        {% for p in products %}
            {% set cat_name = p.category.name if p.category else 'Sin categor√≠a' %}
            {% if cat_name not in grouped_products %}
                {% set _ = grouped_products.update({cat_name: []}) %}
            {% endif %}
            {% set _ = grouped_products[cat_name].append(p) %}
        {% endfor %}

        {% for cat_name, prods in grouped_products.items() %}
        <div class="category-group mb-5">
            <h4 class="mb-3 p-3 rounded-3 d-flex align-items-center gap-2" 
                style="background-color: #f0f8ff; border-left: 5px solid #0d6efd; animation: fadeIn 0.5s;">
                <i class="fas fa-tag" style="color: #0d6efd; font-size: 1.5rem;"></i>
                <span class="text-uppercase fw-bold" style="color: #0d6efd; font-size: 1.25rem;">
                    {{ cat_name }}
                </span>
            </h4>
            <hr class="my-2" style="border-color: #0d6efd; opacity: 0.3;">
            <div class="row g-4">
                {% for p in prods %}
                <div class="col-md-6 col-lg-4 product-card" data-name="{{ p.name|lower }}" data-category="{{ p.category.id if p.category else '' }}">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        <!-- Imagen -->
                        <div style="height: 200px; background-color: #f8f9fa;"
                            class="d-flex align-items-center justify-content-center p-3">
                            {% if p.image_urls and p.image_urls|length > 0 %}
                                <img src="{{ p.image_urls[0] }}" alt="{{ p.name }}" class="w-100 h-100" style="object-fit: contain;">
                            {% else %}
                                <i class="fas fa-box-open text-secondary" style="font-size: 3rem;"></i>
                            {% endif %}
                        </div>

                        <!-- Detalle -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ p.name }}</h5>
                            <p class="card-text text-muted small">{{ p.description|truncate(100) }}</p>

                            <!-- Precios -->
                            <div class="mt-auto">
                                {% if p.is_on_promotion and p.promotion_discount > 0 and (not p.promotion_end_date or p.promotion_end_date > now()) %}
                                    <div class="d-flex align-items-baseline gap-2">
                                        <span class="h5 mb-0 text-success">${{ "%.2f"|format(p.final_price) }}</span>
                                        <small class="text-muted text-decoration-line-through">
                                            ${{ "%.2f"|format(p.list_price) }}
                                        </small>
                                    </div>
                                {% else %}
                                    <span class="h5 mb-0 text-primary">${{ "%.2f"|format(p.final_price) }}</span>
                                {% endif %}

                                <span class="badge bg-{{ 'info' if p.is_service else 'success' }} mt-2">
                                    {{ 'Servicio' if p.is_service else 'Producto' }}
                                </span>

                                {% if not p.is_service and p.stock == 0 %}
                                    <span class="badge bg-warning text-dark mt-2">Agotado</span>
                                {% endif %}

                                <form action="{{ url_for('routes.detalle_producto', product_id=p.id) }}" method="GET" class="mt-2">
                                    <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                                        Ver Detalles
                                    </button>
                                </form>
                                <form action="{{ url_for('routes.agregar_al_carrito', product_id=p.id) }}" method="POST">
                                    <button type="submit" class="btn btn-primary btn-sm mt-3 w-100">
                                        Comprar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    {% else %}
        <div class="alert alert-info text-center rounded-3">
            <h4>üì¶ Esta tienda est√° vac√≠a por el momento.</h4>
            <p>El profesional a√∫n no ha agregado productos o servicios.</p>
        </div>
    {% endif %}

    <div class="mt-4 text-center">
        <a href="{{ url_for('routes.perfil_profesional', url_slug=professional.url_slug) }}" 
           class="btn btn-secondary rounded-pill px-4">
            ‚Üê Volver al perfil
        </a>
    </div>
</div>

<!-- Filtro JS -->
<script>
const searchInput = document.getElementById('search-input');
const categoryFilter = document.getElementById('category-filter');

function filterProducts() {
    const searchText = searchInput.value.toLowerCase();
    const category = categoryFilter.value;

    document.querySelectorAll('.product-card').forEach(card => {
        const name = card.dataset.name;
        const catId = card.dataset.category;

        const matchesSearch = !searchText || name.includes(searchText);
        const matchesCategory = !category || catId === category;

        card.style.display = (matchesSearch && matchesCategory) ? '' : 'none';
    });

    document.querySelectorAll('.category-group').forEach(group => {
        const visibleProducts = group.querySelectorAll('.product-card:not([style*="display: none"])');
        group.style.display = visibleProducts.length > 0 ? '' : 'none';
    });
}

searchInput.addEventListener('input', filterProducts);
categoryFilter.addEventListener('change', filterProducts);
</script>
{% endblock %}

